{% extends 'index.njk' %}
{% import 'navArrows.njk' as navArrows %}


{% block main %}
  <div class="flex flex-justify m2" style="padding:10px 250px">
    {{ navArrows.leftArrow(page, sortBy, direction, searchType) }}
    {{ navArrows.rightArrow(page, sortby, direction, searchType) }}
  </div>
  <div class="overflow-scroll">
    <table class="table">
      <thead>
      <tr>
        <th>
          <a href="/users?sortby=username&direction={{ '1' if direction === '-1' else '-1' }}">Username</a></th>
        <th>Email</th>
        <th>Full Name</th>
        <th>Date Joined</th>
        <th>User Type</th>
      </tr>
      </thead>
      <tbody>
        {% for user in data %}
          <tr>
            <td>{{user.username}}</td>
            <td>{{user.email}}</td>
            <td>{{user.profile.fullName}}</td>
            <td>{{user.createdAt }}</td>
            <td>{{user.role}}</td>
        {%  endfor %}
      </tbody>
    </table>
  </div>

{% endblock %}
