<!DOCTYPE html>
<html lang="en">
<head>
{% block head %}
  <link href="https://unpkg.com/basscss@7.1.1/css/basscss.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
  <title>HeroTraveller CMS</title>
{% endblock %}
</head>

{% set sortBy = 'user' %}
{% set searchType = 'users' %}
{% if not page %}
  {% set page = 0 %}
{% endif %}

{% block header %}
  <div class="flex flex-row m2">
    <a href="/users?sortby=username&direction={{ direction }}&page={{ page }}" class="ml1 btn btn-primary">Users</a>
    <a href="/categories?sortby=category&direction=1&page={{ page }}" class="ml1 btn btn-primary">Categories</a>
    <a href="/stories" class="ml1 btn btn-primary">Stories</a>
    <a href="/" class="ml1 btn btn-primary">Home</a>
  </div>
  <div>
{% endblock %}

{% block main %}
  <p> this is the content that will change depening on which page you're on</p>
  <ul>
  {% for user in data %}
    <li>{{user.username}}</li>
  {%  endfor %}
  </ul>
{% endblock %}
