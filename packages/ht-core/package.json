{
  "name": "@hero/ht-core",
  "version": "0.1.1",
  "description": "HERO Traveler core server functions",
  "main": "dist/index.js",
  "scripts": {
    "clean": "rimraf dist",
    "build": "babel src -d dist && rimraf dist/utils/emailService/templates && mkdir dist/utils/emailService/templates && cp -a src/utils/emailService/templates/. dist/utils/emailService/templates",
    "publish:abeck": "yarn install && npm run clean && npm run build && npm publish --registry https://npm.abeck.io",
    "publish:local": "npm run clean && npm run build && npm run copy-local:api && npm run copy-local:seeder",
    "copy-local:api": "cp -r ./{dist,package.json} ../express-api/node_modules/@hero/ht-core",
    "copy-local:seeder": "cp -r ./{dist,package.json} ../ht-seed-data/node_modules/@hero/ht-core",
    "copy-local:cms": "cp -r ./{dist,package.json} ../cms/node_modules/@hero/ht-core",
    "dev": "watch 'npm run build && npm run copy-local:api' src",
    "dev:cms": "watch 'npm run build && npm run copy-local:cms' src"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@hero/ht-util": "^0.1.0",
    "algoliasearch": "^3.22.1",
    "bcrypt": "^3.0.6",
    "consolidate": "^0.14.5",
    "joi": "^10.2.2",
    "lodash": "^4.17.4",
    "mailchimp-api-v3": "^1.12.1",
    "moment": "^2.17.1",
    "mongoose": "^4.8.6",
    "mongoose-delete": "^0.3.4",
    "mongoose-hidden": "^1.1.0",
    "mongoose-slug-generator": "^1.0.4",
    "mongoose-unique-validator": "^1.0.5",
    "mustache": "^2.3.0",
    "nodemailer": "^3.1.8",
    "nodemailer-sendgrid-transport": "^0.2.0",
    "rand-token": "^0.4.0",
    "standard-error": "^1.1.0"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-flow": "^6.23.0",
    "babel-register": "^6.26.0",
    "babel-template": "^6.26.0",
    "babel-traverse": "^6.26.0",
    "flow-bin": "^0.44.2",
    "rimraf": "^2.6.1",
    "watch": "^1.0.2"
  }
}
