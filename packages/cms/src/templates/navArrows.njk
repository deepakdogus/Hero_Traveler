{% macro leftArrow(page, sortBy, direction, table)%}
  <div>
    <a class="btn" href="/{{table}}?sortby={{sortBy}}&page={{(page - 1) if (page > 1) else 0}}&direction={{direction}}">
      <i class="fa fa-arrow-left m2"></i>
      Previous Page
    </a>
  </div>
{% endmacro %}


{% macro rightArrow(page, sortBy, direction, table)%}
  <div> 
    <a class="btn" href="/{{table}}?sortby={{sortBy}}&page={{(page | int) + 1}}&direction={{direction}}">
      Next Page
      <i class="fa fa-arrow-right m2"></i>
    </a>
  </div>
{% endmacro %}
